{% extends "EncyclopediaAdminBundle::layout.html.twig" %}

{% block body %}
<h3><a href="{{ path('_admin_catalogues_categories') }}">Catalogue Categories</a> > Edit : {{ entity.name }}</h3>
<div class="container_12 edit">
    <div class="grid_6 block">
        <fieldset><legend>Edit</legend>    
        {{ form_start(edit_form) }}
        {{ form_errors(edit_form) }}

        {{ form_row(edit_form.name) }}

        {{ form_end(edit_form) }}
        </fieldset>
    </div>
    <div class="grid_6 block">
        {% if entity.id %}
        <fieldset><legend>Translation</legend>
            <p><a href="{{ path('_admin_catalogues_categories_trans_new',{'id_category' : entity.id}) }}"><i class="fa fa-plus-circle fa-3"></i> Add a Translation</a></p>
            {% if entity.translation|length > 0 %} 
                <table class="list">
                    <tr>
                        <th>Translation</th>
                        <th>Country</th>
                    </tr>
                    {% for tr in entity.translation %}
                    <tr>
                        <td style="vertical-align:baseline">{{tr.nameTrans}}</td>
                        <td style="vertical-align:bottom"><img src="{{ asset('img/flags/'~tr.languages.isoCode~'.png') }}" width="20px" height="20px" /></td>
                    </tr>
                    {% endfor %}
                </table>
            {% endif %}
        </fieldset>
        {% endif %}
    </div>
</div>
{% endblock %}
