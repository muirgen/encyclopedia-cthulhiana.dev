{% extends "EncyclopediaAdminBundle::modal.html.twig" %}

{% block body %}
<div class="row">
        <ol class="breadcrumb">
            <li>Accueil</li>
            <li>Catalogue Categories</li>
            <li>{{ entity.category.name }}</li>
            <li>Edit : {{ entity.nameTrans }}</li>
        </ol>
</div>
<div class="row"><h2>{{ entity.nameTrans }}</h2></div>
<div class="row edit">
    <div class="col-lg-12 block">
        <fieldset><legend>Edit</legend>    
        {{ form_start(edit_form) }}
        {{ form_errors(edit_form) }}

        {{ form_row(edit_form.nameTrans) }}

        {{ form_end(edit_form) }}
        </fieldset>
    </div>
</div>
{% endblock %}
