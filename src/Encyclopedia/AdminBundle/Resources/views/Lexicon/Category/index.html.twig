{% extends "EncyclopediaAdminBundle::main.html.twig" %}

{% block body %}
<div class="row">
    <ol class="breadcrumb">
        <li><a href="{{ path('encyclopedia_admin_homepage') }}">Home</a></li>
        <li>Lexicon</li>
        <li class="active">Categories</li>
    </ol>
</div>
<div class="row">
    <h2>Categories</h2>
    <div class="col-lg-12 block"><a href="{{ path('_admin_lexicon_category_new') }}"><i class="fa fa-plus-circle"></i> Add a new category for the mytho's terms</a></div>
    <div class="col-lg-12 block">
        <h3>Existing categories</h3>
        <table class="table">
            <tr>
                <th>Category name</th>
                <th>Translation(s)</th>
            </tr>
            {% for l in list %}
            <tr>
                <td><a href="{{ path('_admin_lexicon_category_edit', {'id' : l.id} ) }}">{{ l.category }} <i class="fa fa-pencil-square-o fa-1x"></i></a></td>
                <td>
                    <ul>
                    {% for lt in l.translation %}
                    <li><img src="{{ asset('img/flags/'~lt.language.isoCode~'.png') }}" width="20px" height="20px" /> {{ lt.translation }}</li>
                    {% endfor %}
                    </ul>
                </td>
            </tr>
            {% endfor %}
        </table>
    </div>
</div>    
{% endblock %}