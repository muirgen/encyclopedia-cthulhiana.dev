{% extends "EncyclopediaAdminBundle::main.html.twig" %}

{% block body %}
    <div class="row">
        <ol class="breadcrumb">
            <li><a href="{{ path('encyclopedia_admin_homepage') }}">Home</a></li>
            <li>Lexicon</li>
            <li>Categories</li>
            <li class="active">{{ nameOfAction }} Category</li>
        </ol>
    </div>
    <div class="row">
        <h2>{{ nameOfAction }} Category</h2>
        <div class="col-lg-6">
            <h3>Form</h3>
            {{ form_start(form, {attr: {'class':'form-horizontal'} } ) }}

            {% if form_errors is defined %}
                <div class="alert alert-danger" role="alert">
                    {{ form_errors(form) }}
                </div>
            {% endif %}

            <div class="form-group">
                {{ form_label(form.category, 'Generic category name' ,{'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                <div class="col-xs-8">
                    {{ form_widget(form.category, {attr:{'class':'form-control'}} ) }}

                    {% if form_errors is defined %}
                        <div class="col-xs-8 alert alert-danger" role="alert">{{ form_errors(form.category) }}</div>
                    {% endif %}
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-8">
                    {{ form_row(form.submit) }}
                </div>
            </div> 
            {{ form_end(form) }}
            
        </div>
        {% if category.id|length > 0 %}
            <div class="col-lg-6">
                <h3>Translation</h3>
                <div class="col-lg-12 block"><a href="{{ path('_admin_lexicon_category_new') }}"><i class="fa fa-plus-circle"></i> Add a new translation for category</a></div>
                {% if category.translation|length > 0 %}
                    <table class="table-striped">
                        <tr>
                            <th>Country</th>
                            <th>Translation</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                        {% for t in translation %}
                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                            </tr>
                        {% endfor %}
                    </table>
                {% endif %}
            </div> 
        {% endif %}
    </div>    
{% endblock %}