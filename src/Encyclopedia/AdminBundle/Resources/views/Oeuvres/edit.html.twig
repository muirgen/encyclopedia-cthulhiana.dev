{% extends "EncyclopediaAdminBundle::layout.html.twig" %}

{% block body %}
<h3><a href="{{ path('_oeuvres') }}">Oeuvre</a> > Edit : {{ entity.name }}</h3>
<div class="container_12 edit">
    <div class="grid_6 block">
        <fieldset><legend>Edit</legend>    
        {{ form_start(edit_form) }}
        {{ form_errors(edit_form) }}

        {{ form_row(edit_form.name) }}
        {{ form_row(edit_form.date) }}
        {{ form_row(edit_form.format) }}

        {{ form_end(edit_form) }}
        </fieldset>
    </div>
    {% if entity.id %}
    <div class="grid_0 block">
        <fieldset><legend>Alias</legend>
            <p><a href="{{ path('_oeuvres_alias_new',{'id_oeuvre' : entity.id}) }}"><i class="fa fa-plus-circle fa-3"></i> Add a new alias</a></p>
            {% if entity.alias|length > 0 %}
            <table class="list">
                <tr>
                    <th>Alias</th>
                    <th>Country</th>
                </tr>
                {% for alias in entity.alias %}
                <tr>
                    <td><a href="{{ path('_catalogues_alias_edit',{'id_catalogue' : entity.id,'id' : alias.id}) }}">{{ alias.name }}</a></td>
                    <td><img src="{{ asset('img/flags/'~alias.languages.isoCode~'.png') }}" width="20px" height="20px" /></td>
                </tr>
                {% endfor %}
            </table>
            {% endif %}
        </fieldset>
    </div>
    <div class="grid_0">
        <fieldset><legend>Catalogue's items</legend>
           
        </fieldset>
    </div>
   {% endif %}
{% endblock %}
