{% extends "EncyclopediaAdminBundle::layout.html.twig" %}

{% block body -%}
    <h1>Publishing list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Author</th>
                <th>Editor</th>
                <th>Classification</th>
                <th>Typenumber</th>
                <th>Refnumber</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('_publishing_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.author }}</td>
                <td>{{ entity.editor }}</td>
                <td>{{ entity.classification }}</td>
                <td>{{ entity.typeNumber }}</td>
                <td>{{ entity.refNumber }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('_publishing_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('_publishing_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('_publishing_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
