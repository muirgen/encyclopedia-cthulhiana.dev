{% extends "EncyclopediaAdminBundle::layout.html.twig" %}

{% block body -%}
<h3><a href="{{ path('_admin_publishing') }}">Publishing</a> > Edit : {{ entity.title }}</h3>
<div class="container_12 edit">
    <div class="grid_0 block">
        <fieldset><legend>Edit</legend>    
        {{ form_start(edit_form) }}
        {{ form_errors(edit_form) }}
        
        <div style="float:left;width:48%;">
        {{ form_row(edit_form.title) }}
        {{ form_row(edit_form.subtitle) }}
        {{ form_row(edit_form.author) }}
        {{ form_row(edit_form.collection) }}
        {{ form_row(edit_form.collectionNumber) }}
        {{ form_row(edit_form.publisher) }}
        {{ form_row(edit_form.publishDate) }}
        {{ form_row(edit_form.publishYear) }}
        {{ form_row(edit_form.classification) }}
        {{ form_row(edit_form.typeNumber) }}
        {{ form_row(edit_form.refNumber) }}
        {{ form_row(edit_form.languages) }}
        {{ form_row(edit_form.comments) }}
        </div>
        
        <div style="float:right; width:48%;">
            {{ form_row(edit_form.oeuvres) }}
        </div>   
        {{ form_end(edit_form) }}
        </fieldset>
    </div>
    
    {% if entity.id %}
        
        
    {% endif %}
        
</div>
    
{% endblock %}
