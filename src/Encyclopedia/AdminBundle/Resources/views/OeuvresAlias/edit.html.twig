{% extends "EncyclopediaAdminBundle::layout.html.twig" %}

{% block body %}
<h3><a href="{{ path('_admin_oeuvres') }}">Oeuvre</a> > Edit : <a href="{{ path('_admin_oeuvres_edit', {'id' : oeuvre.id}) }}">{{ oeuvre.name }}</a> > Alias : {{ entity.name }}</h3>
<div class="container_12 edit">
    <div class="grid_6 block">
        <fieldset><legend>Edit</legend>    
        {{ form_start(edit_form) }}
        {{ form_errors(edit_form) }}

        {{ form_row(edit_form.name) }}
        {{ form_row(edit_form.oeuvres) }}
        {{ form_row(edit_form.languages) }}
        
        {{ form_end(edit_form) }}
        </fieldset>
    </div>
</div>
{% endblock %}
